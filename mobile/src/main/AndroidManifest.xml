<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.heatherandkevin.motowatchface">

    <!-- Required to act as a custom watch face. -->
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Test"
            android:label="Mager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.BatteryService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />

            </intent-filter>
        </service>

        <receiver android:name=".receivers.BatteryReceiver">
            <intent-filter>
                <action android:name="net.heatherandkevin.motowatchface.PERIODIC_TASK_BATTERY" />
                <action android:name="net.heatherandkevin.motowatchface.PERIODIC_TASK_CANCEL" />
            </intent-filter>
        </receiver>



    </application>

</manifest>
